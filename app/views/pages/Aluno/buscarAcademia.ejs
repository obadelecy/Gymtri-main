<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscar academia</title>
    <link rel="stylesheet" href="/public/css/styleInterface.css">
</head>
<body>
    <header>
        <a href="/views/pages/interfaces/interfaceUsuario"><img src="/public/img/logoPng3.png" alt="Logo Gymtri" width="80px"></a>
        <nav id="menu">
            <ul>
                <li><a href="/views/pages/Aluno/buscarProfissional" class="navConfig">Buscar Profissional</a></li>
                <li><a href="/views/pages/Aluno/buscarAcademia" class="navConfig">Buscar Academias</a></li>
                <li><a href="/views/pages/Produtos/indexprodutos" class="navConfig" target="_blank">Produtos</a></li>
                <li><a href="/views/pages/Aluno/editarDados" class="navConfig">Editar Dados</a></li>
                <li><a href="/views/pages/index" class="navConfig">Sair</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="title">
            <h1>Buscar academia</h1>
        </section>

        <form action="/buscar-academia" method="GET">
            <section>
                <label class="labelAgend" for="area">Digite o nome da academia ou CEP </label>
                <input type="text" name="search" id="nameOrRegister" placeholder="Nome ou CEP da academia">
            </section>
            <section class="btnAgend">
                <button class="btnConfig" type="submit">Buscar academia</button>
            </section>
        </form>

        <% if (academias && academias.length > 0) { %>
            <section class="resultados">
                <% academias.forEach(academia => { %>
                    <div class="resultado-academia">
                        <h3><%= academia.nome %></h3>
                        <p><%= academia.endereco %></p>
                        <p>CEP: <%= academia.cep %></p>
                        <button onclick="verDetalhes('<%= academia.id %>')">Ver detalhes</button>
                    </div>
                <% }); %>
            </section>
        <% } %>
    </main>
</body>
</html>